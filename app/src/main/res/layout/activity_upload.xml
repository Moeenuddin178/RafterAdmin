<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload_Activirty"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/img_job"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher_background"
        android:padding="1dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shadow"
        android:padding="10dp"
        android:id="@+id/serviceLayout"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <Spinner
            android:id="@+id/selectType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_dpt"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:hint="Department"
            android:inputType="textCapSentences" />
        <EditText
            android:id="@+id/edt_qlf"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:hint="Qualification"
            android:inputType="textCapSentences" />
        <EditText
            android:id="@+id/edt_prof"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:hint="Profession"
            android:inputType="textCapSentences" />
        <EditText
            android:id="@+id/link"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:hint="Link for Apply"
            android:inputType="textCapSentences" />
        <EditText
            android:id="@+id/Tag"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:hint="Tag For Search "
            android:inputType="textCapSentences" />
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow1"
            android:text="Add"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />


    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
</RelativeLayout>